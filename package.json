{
	"name": "lookinside",
	"version": "1.0.0",
	"description": "LookInside - CPU-Z와 유사한 기능을 제공하는 데스크탑 시스템 정보 뷰어",
	"main": "dist-electron/main.js",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"build:electron": "npm run build && electron-builder",
		"electron:serve": "cross-env IS_DEV=true npm run dev",
		"electron:build": "npm run build && electron-builder",
		"electron:build:win": "npm run build && electron-builder --win",
		"electron:build:mac": "npm run build && electron-builder --mac",
		"electron:build:linux": "npm run build && electron-builder --linux",
		"electron:build:all": "npm run build && electron-builder -mwl",
		"electron:preview": "npm run build && electron ."
	},
	"keywords": [
		"electron",
		"vue",
		"system",
		"info",
		"cpu",
		"memory"
	],
	"author": "System Info Viewer",
	"license": "MIT",
	"devDependencies": {
		"@vitejs/plugin-vue": "^4.4.0",
		"electron": "^27.0.0",
		"electron-builder": "^24.6.4",
		"typescript": "^5.2.2",
		"vite": "^4.4.9",
		"vite-plugin-electron": "^0.15.5",
		"vite-plugin-electron-renderer": "^0.14.5",
		"vue-tsc": "^1.8.8"
	},
	"dependencies": {
		"vue": "^3.3.4",
		"systeminformation": "^5.21.7",
		"@types/node": "^20.5.0"
	},
	"build": {
		"appId": "com.lookinside.app",
		"productName": "LookInside",
		"directories": {
			"output": "release"
		},
		"files": [
			"dist/**/*",
			"dist-electron/**/*"
		],
		"mac": {
			"category": "public.app-category.utilities",
			"target": "dmg"
		},
		"win": {
			"target": "nsis",
			"icon": "public/favicon.ico"
		},
		"linux": {
			"target": "AppImage"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		}
	}
}
